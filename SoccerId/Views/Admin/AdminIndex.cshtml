
@model IEnumerable<SoccerId.Entities.User>





@{
    ViewBag.Title = "AdminIndex";
}

<div class="panel panel-info">
    <div class="panel-heading">
        Учетные записи
    </div>
    <table class="table table-condensed table-hover">
        <tr>
            <th>Id</th>
            <th>Имя</th>
            <th>Email</th>
            <th><th/>
        </tr>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="3" class="text-center">Нет ни одной учетной записи</td>
            </tr>
        }
        else
        {
            foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>   
                         @Html.ActionLink("Изменить", "Edit", new { id = user.Id })  |                  
                        @Html.ActionLink("Удалить", "Delete", new { id = user.Id })                      
                    </td>
                </tr>
            }
        }
    </table>
</div>


@Html.ActionLink("Создать", "Create", null, new { @class = "btn btn-info" })
